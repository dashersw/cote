{
  "name": "cote",
  "version": "0.20.0",
  "keywords": [
    "microservices",
    "zero-configuration",
    "zero-conf",
    "mesh",
    "network",
    "auto discovery",
    "scalable",
    "fault-tolerant"
  ],
  "description": "A Node.js library for building zero-configuration microservices.",
  "scripts": {
    "build": "babel src -D -d dist -s",
    "clean": "rm -rf dist",
    "coverage": "nyc -x=\"**/examples/*\" -x=\"**/*balanced*.js\" -x=\"**/test/*.js\" -x=\"**/lib/*.js\" report",
    "lint": "eslint src test",
    "lint-fix": "eslint --fix src test",
    "prepublish": "npm run build",
    "test": "NODE_ENV=dev nyc -x=\"**/examples/*\" -x=\"**/*balanced*.js\" -x=\"**/test/*.js\" -x=\"**/lib/*.js\" ava --timeout=60000"
  },
  "author": {
    "name": "Armagan Amcalar",
    "email": "armagan@amcalar.com"
  },
  "main": "dist/index.js",
  "license": "MIT",
  "repository": "dashersw/cote",
  "engines": {
    "node": ">=v6.0.0"
  },
  "dependencies": {
    "@dashersw/axon": "2.0.5",
    "@dashersw/node-discover": "^1.0.4",
    "charm": "1.0.2",
    "colors": "1.3.3",
    "core-js": "^2.6.5",
    "eventemitter2": "5.0.1",
    "lodash": "^4.17.11",
    "portfinder": "1.0.20",
    "socket.io": "2.2.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "async": "^2.6.2",
    "ava": "^1.4.1",
    "commander": "2.20.0",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-google": "^0.12.0",
    "humanize-number": "0.0.2",
    "nyc": "^13.3.0",
    "randomstring": "^1.1.5",
    "request": "^2.88.0",
    "sinon": "^7.3.1",
    "socket.io-client": "2.2.0"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "extends": [
      "google"
    ],
    "rules": {
      "require-jsdoc": "off",
      "new-cap": "off",
      "guard-for-in": "off",
      "indent": [
        "error",
        4
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "max-len": [
        "error",
        {
          "code": 120
        }
      ]
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "node": "6"
          },
          "useBuiltIns": "usage",
          "corejs": "2",
          "exclude": [
            "es6.promise"
          ]
        }
      ]
    ]
  }
}
